{
  "name": "codegen-gql-files-example",
  "version": "1.0.0",
  "private": true,
  "description": "Mercurius + GraphQL Code Generator example",
  "keywords": [
    "graphql-codegen"
  ],
  "license": "MIT",
  "author": "PabloSz",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsup-node --watch --onSuccess \"cross-env NODE_ENV=development node dist/index.js\" src/index.ts",
    "prepare": "tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "cross-env NODE_ENV=test tap --node-arg=--require=esbuild-register"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.3.2",
    "fastify": "^3.20.2",
    "graphql": "^15.5.1",
    "mercurius": "^8.1.3",
    "mercurius-codegen": "workspace:^2.0.0"
  },
  "devDependencies": {
    "@graphql-typed-document-node/core": "^3.1.0",
    "@types/node": "^16.7.1",
    "@types/tap": "^15.0.5",
    "cross-env": "^7.0.3",
    "esbuild-register": "^3.0.0",
    "mercurius-integration-testing": "^3.2.0",
    "tap": "^15.0.9",
    "tsup": "^4.14.0",
    "typescript": "^4.3.5"
  },
  "tap": {
    "check-coverage": false
  }
}
